template(name='navbar')
    header
        h1 {{title}}
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse'
              , data-target='#navbar'
              , aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            // each loop requires js helper, value gets assigned to unknown text
            each arr3
              span.icon-bar
          a.navbar-brand(href='/') Tweet app
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href='/') Home
            li: a(href='vid') Video
            li: a(href='git') Github

template(name='tweets')
  h1 Rant!
  p.lead
    ul.list-group
      li.list-group-item
        button.btn.btn-primary(type='button') Header 
          span.badge #{scrapedHeaderCount}
        | #{scrapedHeader}
        // {{ getData "header" }}

      li.list-group-item
        button.btn.btn-primary(type='button') Data: 
          span.badge #{scrapedDataCount}
        | #{scrapedData}

  form#infoHeader
    .input-group
      span.input-group-addon url
      input.form-control(type='text', aria-describedby='basic-addon2'
        , name='headerUrl'
        , value='http://www.hockey-reference.com/players/s/shacked01.html')

    .input-group
      span.input-group-addon selector
      input.form-control(type='text', aria-describedby='basic-addon1'
        , name='headerFormat'
        , value='#stats_basic_nhl > thead > tr:nth-child(2)')

    input(type='submit', value='Get Header')

  br

  form#infoData
    .input-group
      span.input-group-addon url
      input.form-control(type='text', aria-describedby='basic-addon2'
        , name='dataUrl'
        , value='http://www.hockey-reference.com/players/s/shacked01.html')

    .input-group
      span.input-group-addon selector
      input.form-control(type='text', aria-describedby='basic-addon1'
        , name='dataFormat'
        , value='#stats_basic_nhl > tbody > tr')

    input(type='submit', value='Get Data')

