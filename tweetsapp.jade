template(name='navbar')
    header
        h1 {{title}}
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse'
              , data-target='#navbar'
              , aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            // each loop requires js helper, value gets assigned to unknown text
            each arr3
              span.icon-bar
          a.navbar-brand(href='/') TableScraper
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href='/') Home
            li: a(href='vid') Video tutorial
            li: a(href='git') Github

template(name='tweets')
  h3 Select URL to scrape, provide data formats, then press Get Data
  
  //reset all
  button.btn.btn-danger#reset Reset all results
  .input-group
    span.input-group-addon url
    input.form-control#tb_url(type='text', aria-describedby='basic-addon2'
      , value='http://www.hockey-reference.com/players/s/shacked01.html')
      
  //input_header
  .input-group
    span.input-group-addon selector
    input.form-control#tb_header(type='text', aria-describedby='basic-addon1'
      , value='#{headerDefaultFormat}')
  button.btn.btn-primary#bt_header Get Header using cheerio.js
  br
  br

  //input_data
  .input-group
    span.input-group-addon selector
    input.form-control#tb_data(type='text', aria-describedby='basic-addon1'
      , value='#{dataDefaultFormat}')
  button.btn.btn-primary#bt_data Get Data using jquery/jsdom
  br
  br

  //input_table
  .input-group
    span.input-group-addon root
    input.form-control#tb_table_root(type='text', aria-describedby='basic-addon1'
      , value='#stats_basic_nhl tr')
  .input-group
    span.input-group-addon header
    input.form-control#tb_table_header(type='text', aria-describedby='basic-addon1'
    , value='th')
    span.input-group-addon data
    input.form-control#tb_table_data(type='text', aria-describedby='basic-addon1'
    , value='td')
  button.btn.btn-primary#bt_table Get Table using labwingslab/x-ray')

  // output results
  p.lead
    ul.list-group
      each results
        li.list-group-item
          button.btn.btn-default(type='button') #{label} 
            span.badge #{count}
          | #{text}


